<%= form_tag products_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search by product or brand name"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
    <%= link_to "Clear Search", products_path, class:"btn btn-primary" %>
<% end %>